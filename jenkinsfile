pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws_key_access')
        AWS_SECRET_ACCESS_KEY = credentials('aws_secret_key')
        AWS_DEFAULT_REGION = credentials('aws_region')
        AWS_REPOSITORY_ID = 'v4d6h5l3'
        DOCKER_IMAGE = 'jenkins:devops'
    }
    stages {
        stage('Creating a Docker Image') {
            steps {
                dir('docker') {
                    sh 'docker build . -t $DOCKER_IMAGE'
                }
            }
        }
        stage('Adding Docker image into AWS Registry') {
            steps {
                sh 'aws ecr-public get-login-password --region $AWS_DEFAULT_REGION | docker login --username AWS --password-stdin public.ecr.aws/$AWS_REPOSITORY_ID'
                sh 'docker tag $DOCKER_IMAGE public.ecr.aws/$AWS_REPOSITORY_ID/$DOCKER_IMAGE'
                sh 'docker push public.ecr.aws/$AWS_REPOSITORY_ID/$DOCKER_IMAGE'
            }
        }
        stage('Removing Images and Containers from local') {
            steps {
                sh 'docker rm $(docker ps --filter status=exited -q)'
                sh 'docker rmi $DOCKER_IMAGE public.ecr.aws/$AWS_REPOSITORY_ID/$DOCKER_IMAGE'
            }
        }
    }
}
