pipeline {
    agent {
        label 'master'
    }
    environment {
        AWS_ACCESS_KEY_ID = credentials('aws_key_access')
        AWS_SECRET_ACCESS_KEY = credentials('aws_secret_key')
        AWS_DEFAULT_REGION = credentials('aws_region')
    }
    stages {
        stage('Deploy Jenkins Server Through Terraform') {
            steps {
                dir('terraform') {
                    sh 'terraform init -upgrade'
                    sh 'terraform validate'
                    sh 'terraform plan'
                    sh 'terraform apply -auto-approve'
                    sh 'sleep 1m'
                    sh 'yes | cp -r inventory.yaml ../ansible/inventory.yaml'
                    sh 'rm -rf inventory.yaml'
                }
            }
        }
        stage('Config Jenkins Server Through Ansible') {
            steps {
                dir('ansible') {
                    ansiblePlaybook credentialsId: 'ubuntu', disableHostKeyChecking: true, extras: '-vvv', inventory: 'inventory.yaml', playbook: 'playbook.yaml'
                }
            }
        }
    }
    post {
        failure { // Si falla algun stage/step borra la infraestructura creada
            dir('terraform') {
                sh 'terraform destroy -auto-approve'
                echo 'Pipeline process failed, please review the logs'
            }
        }
        success {
            echo 'Pipeline finished successfully!'
        }
    }
}
